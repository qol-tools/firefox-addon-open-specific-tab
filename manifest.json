{
  "manifest_version": 3,
  "name": "Tab Reuse",
  "version": "1.6.0",
  "permissions": ["tabs", "webNavigation", "scripting", "clipboardWrite", "cookies", "storage"],
  "host_permissions": ["<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-reuse@kmrh47.github.io"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
